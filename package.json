{
  "name": "spellbuddy",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:generate": "node -r @swc-node/register src/lib/db/schema-generator.ts && drizzle-kit generate:sqlite",
    "db:migrate": "node -r @swc-node/register src/lib/db/migrate.ts",
    "db:gamify": "node -r @swc-node/register src/lib/db/migrate.ts --gamify",
    "db:seed-achievements": "tsx src/scripts/force-seed-achievements-wrapper.ts",
    "db:run-migrations": "node scripts/run-migrations.js",
    "semantic-release": "semantic-release",
    "test-release": "node test-release.js",
    "test-achievements": "node scripts/test-achievements.js",
    "ensure-server": "node scripts/ensure-server.js",
    "prepare-release": "node scripts/prepare-release.js",
    "commit": "git-cz",
    "prepare": "[ -d .git ] && husky install || echo 'Skipping husky installation'"
  },
  "dependencies": {
    "ai": "^4.1.58",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^11.8.1",
    "cookie": "^1.0.2",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.40.0",
    "jose": "^6.0.10",
    "jsonwebtoken": "^9.0.2",
    "langchain": "^0.3.19",
    "next": "15.2.2",
    "openai": "^4.87.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-speech-recognition": "^3.10.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@eslint/eslintrc": "^3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^10.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.0.4",
    "@semantic-release/npm": "^10.0.4",
    "@semantic-release/release-notes-generator": "^11.0.7",
    "@swc-node/register": "^1.10.10",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.12",
    "@types/cookie": "^0.6.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.17.24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-speech-recognition": "^3.9.6",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.16",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "drizzle-kit": "^0.30.5",
    "eslint": "^9",
    "eslint-config-next": "15.2.2",
    "husky": "^8.0.3",
    "node-fetch": "^2.7.0",
    "postcss": "^8.4.31",
    "semantic-release": "^21.0.7",
    "tailwindcss": "^3.3.5",
    "tsx": "^4.19.3",
    "typescript": "^5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
